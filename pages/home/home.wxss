/* pages/home/home.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
}

/* 头部样式 */
.header {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.welcome {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.login-btn {
  margin: 20rpx 0;
  background-color: #1890ff;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
}

.filter-tabs {
  display: flex;
  margin-top: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab.active {
  color: #1890ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 会面列表样式 */
.meeting-list {
  flex: 1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
  color: #999999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.btn-create {
  background-color: #1890ff;
  color: #ffffff;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
}

/* 会面卡片样式 */
.meeting-cards {
  padding-bottom: 120rpx; /* 为了底部的浮动按钮留出空间 */
}

.meeting-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.meeting-card.past {
  opacity: 0.8;
}

.meeting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.meeting-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

.meeting-status {
  font-size: 24rpx;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
}

.upcoming-status {
  background-color: #e6f7ff;
  color: #1890ff;
}

.past-status {
  background-color: #f5f5f5;
  color: #999999;
}

.meeting-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-item text {
  font-size: 28rpx;
  color: #666666;
  margin-left: 15rpx;
}

.meeting-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eeeeee;
}

.participants {
  display: flex;
  align-items: center;
}

.participant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
  margin-right: -15rpx;
}

.more-participants {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

.actions {
  display: flex;
}

.btn-detail {
  font-size: 26rpx;
  color: #1890ff;
  background-color: transparent;
  border: 1rpx solid #1890ff;
  border-radius: 25rpx;
  padding: 8rpx 25rpx;
}

/* 创建按钮容器 */
.create-button-container {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  z-index: 100;
}

.btn-create-float {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #1890ff;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.4);
  padding: 0;
}

/* 图标 */
.icon {
  display: inline-block;
}